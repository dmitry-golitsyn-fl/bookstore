<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Книжная полка</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
                @Html.ActionLink("Книги", "Index", "Books", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Авторы", "Index", "Authors", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
